<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ldg.dao.BrandDao"> <!--扫描到的包路径-->
    <!--通过ID查询-->
    <select id="selectById" resultType="com.ldg.entity.Brand" parameterType="Integer">
        select brand_id, brand_name, brand_describe from brand where brand_id = #{brandId};
    </select>

    <!--查询所有-->
    <select id="selectAll" resultType="com.ldg.entity.Brand">
        select brand_id, brand_name, brand_describe from brand
    </select>

    <!--查询所有-->
    <select id="selectAllByName" resultType="com.ldg.entity.Brand">
        select brand_id, brand_name, brand_describe from brand
        <where>
            <if test="brandName != null and brandName != ''">
                brand_name like concat('%',#{brandName},'%')
            </if>
      </where>;
    </select>

    <!--判断 商品品牌 是否存在-->
    <select id="existsWithBrandName" resultType="Boolean">
        select count(brand_name) from brand where brand_id !=#{brandId} and brand_name = #{brandName};
    </select>

    <!--查询所有品牌名-->
    <select id="selectAllName" resultType="String">
        select brand_name from brand;
    </select>

    <!--插入一条数据-->
    <insert id="insertData" parameterType="com.ldg.entity.Brand">
        insert into brand (brand_id, brand_name, brand_describe) values (#{brandId},#{brandName},#{brandDescribe});
    </insert>

    <!--通过ID更新-->
    <update id="updateById" parameterType="com.ldg.entity.Brand">
        update brand
        <set>
            <if test="brandId != null">
                brand_name = #{brandName},
            </if>
            <if test="brandDescribe != null">
                brand_describe = #{brandDescribe},
            </if>
        </set>
        where brand_id = #{brandId};
    </update>

    <!--通过ID删除-->
    <delete id="deleteById" parameterType="Integer">
        delete from brand where brand_id = #{brandId};
    </delete>

    <!--通过分类名删除-->
    <delete id="deleteByName" parameterType="String">
        delete from brand where brand_name = #{brandName};
    </delete>
</mapper>